{
  "name": "xi-electron",
  "productName": "Xi Electron",
  "version": "0.1.0",
  "description": "A frontend for xi-editor based on modern web-technologies",
  "main": "src/main/index.ts",
  "scripts": {
    "precommit": "lint-staged",
    "postinstall": "node scripts/postinstall.js",
    "start": "electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "tslint --project tsconfig.json --force"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "tslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "electron",
    "electron-forge",
    "xi-editor",
    "canvas",
    "webgl",
    "text-editor"
  ],
  "author": "acheronfail",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip",
          "dmg"
        ],
        "linux": [
          "deb",
          "rpm",
          "snap",
          "flatpak"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "yarn",
        "appBundleId": "io.acheronfail.xi-electron"
      },
      "electronWinstallerConfig": {
        "name": "xi_electron"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "acheronfail",
        "name": "xi-electron"
      },
      "windowsStoreConfig": {
        "packageName": "io.acheronfail.xi-electron",
        "name": "xi_electron"
      }
    }
  },
  "dependencies": {
    "electron-compile": "^6.4.3",
    "electron-squirrel-startup": "^1.0.0",
    "execa": "^0.10.0",
    "fs-extra": "^7.0.0",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "electron": "^3.0.0-beta.3",
    "electron-devtools-installer": "^2.2.4",
    "electron-forge": "^5.2.2",
    "electron-prebuilt-compile": "^2.0.4",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "which": "^1.3.1"
  }
}
